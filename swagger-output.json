      "put": {
        "tags": [
          "news"
        ],
        "description": "뉴스 수정",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "수정하고자 하는 뉴스의 ID",
            "schema": {
              "$ref": "#/definitions/NewsId"
