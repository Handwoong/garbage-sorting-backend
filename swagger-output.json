          {
            "name": "id",
            "in": "params",
            "required": true,
            "type": "string",
            "description": "채점하고자 하는 퀴즈의 quizId를 경로 엔드포인트에 추가",
            "schema": {
              "$ref": "#/definitions/QuizId"
            }
