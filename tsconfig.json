{
    "compilerOptions": {
        "target": "es2016",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": { "@src/*": ["*"] },
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/app.ts", "__tests__", "jest.config.ts"],
    "exclude": ["node_modules", "dist/"]
}
